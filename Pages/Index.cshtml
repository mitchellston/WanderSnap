@page
@model IndexModel
@{
ViewData["Title"] = "Home page";
}


<section class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col lg:flex-row-reverse">
        <div class="w-64 carousel rounded-box max-w-sm shadow-2xl">
            <div class="carousel-item w-full pr-1">
                <img src="~/media/Index/1.jpg" class="w-full" alt="Example image 1" />
            </div>
            <div class="carousel-item w-full  pr-1">
                <img src="~/media/Index/2.jpg" class="w-full" alt="Example image 2" />
            </div>
            <div class="carousel-item w-full pr-1">
                <img src="~/media/Index/3.jpg" class="w-full" alt="Example image 3" />
            </div>
            <div class="carousel-item w-full pr-1">
                <img src="~/media/Index/4.jpg" class="w-full" alt="Example image 4" />
            </div>
        </div>
        <div>
            <h1 asp-page="Index"
                class="flex gap-3 items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                <span><svg viewBox="0 0 15 15"
                        class="flex-shrink-0 w-6 h-6 text-yellow-400 transition duration-75 dark:text-yellow-600"
                        fill="currentColor" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
                        <path
                            d="M7.5 1.5v-1m0 13.99v-.998m6-5.997h1m-13 0h-1m2-4.996l-1-1m12 0l-1 1m-10 9.993l-1 1m12 0l-1-1m-2-4.997a2.999 2.999 0 01-3 2.998 2.999 2.999 0 113-2.998z"
                            stroke="currentColor" stroke-linecap="square"></path>
                    </svg> </span>
                <span class="text-5xl font-bold">WanderSnap</span>
            </h1>
            <p class="py-6">Embark on extraordinary adventures, capture unforgettable moments, and effortlessly share
                the magic of your ultimate vacations with WanderSnap, connecting you with a global community of
                wanderers and inspiring wanderlust in others.</p>
            <a asp-page='@((User.Identity.IsAuthenticated==false) ? "/auth/Register" : "/profile/vacation/AddVacation")'
                class="btn btn-primary">Get Started</a>
        </div>
    </div>
</section>