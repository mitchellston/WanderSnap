@page "/profile/vacation/Add"
@model AddVacationModel
@{ ViewData["Title"] = "Vakantie toevoegen"; }

<section class="">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <a asp-page="Index" class="flex gap-3 items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <span><svg viewBox="0 0 15 15"
                    class="flex-shrink-0 w-6 h-6 text-yellow-400 transition duration-75 dark:text-yellow-600"
                    fill="currentColor" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
                    <path
                        d="M7.5 1.5v-1m0 13.99v-.998m6-5.997h1m-13 0h-1m2-4.996l-1-1m12 0l-1 1m-10 9.993l-1 1m12 0l-1-1m-2-4.997a2.999 2.999 0 01-3 2.998 2.999 2.999 0 113-2.998z"
                        stroke="currentColor" stroke-linecap="square"></path>
                </svg> </span>
            <span>Ultimate Vacation Photo's</span>
        </a>
        <div
            class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Vakantie toevoegen
                </h1>
                <form class="space-y-4 md:space-y-6" method="post">
                    <div>
                        <label asp-for="form_VacationName"
                            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Vakantie
                            naam:</label>
                        <input type="text" asp-for="form_VacationName"
                            class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            placeholder="Vakantie naar ...">
                        <span asp-validation-for="form_VacationName" class="text-red-700"></span>
                    </div>
                    <div>
                        <label asp-for="form_VacationDescription"
                            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Vakantie
                            descriptie:</label>
                        <textarea asp-for="form_VacationDescription"
                            class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            placeholder="Vakantie was samen met ..."></textarea>
                        <span asp-validation-for="form_VacationDescription" class="text-red-700"></span>
                    </div>
                    <div>
                        <div class="flex">
                            <div class="w-full">
                                <label asp-for="form_StartDate"
                                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Van:</label>
                                <input value='@DateTime.Today.ToString("yyyy-MM-dd")' type="date"
                                    asp-for="form_StartDate"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                            </div>
                            <div class="w-full">
                                <label asp-for="form_EndDate"
                                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tot:</label>
                                <input type="date" asp-for="form_EndDate"
                                    value='@DateTime.Today.AddDays(7).ToString("yyyy-MM-dd")'
                                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                            </div>
                        </div>
                        <span class="text-red-700" asp-validation-for="form_StartDate"></span>
                        <span class="text-red-700" asp-validation-for="form_EndDate"></span>
                    </div>
                    <button type="submit" asp-validation-for="form_EndDate"
                        class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Vakantie
                        toevoegen</button>
                </form>
            </div>
        </div>
    </div>
</section>